<p style="color: green"><%= notice %></p>

<h1>Events</h1>

<div id="events">
  <% @events.each do |event| %>
    <h1>
      <%= event.title %>
    </h1>

    <p>
      <strong>Date:</strong>
      <%= event.date.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y, %I:%M %p") %>
    </p>

    <p>
      <strong>Location:</strong>
    <!-- <i class="teal video icon"></i>   - it's usual icon in HTML doc -->
      <%= content_tag :i, "", class: "teal video icon ms-1" %>
      <%= event.location %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= event.description %>
    </p>

    <p>
      <%= link_to "Show this event", event, class: "ui primary mini button" %>
    </p>
  <% end %>
</div>

<%= link_to "New event", new_event_path, class: "ui green button mt-2" %>

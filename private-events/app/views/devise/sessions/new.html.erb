<h2 class="ui header">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "ui form", "data-turbo" => "false" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
    <% resource.errors.full_messages_for(:email).each do |message| %> 
      <h5 class="ui red inverted header space-mono-regular m-0"> 
        <small><%= message %></small> 
      </h5>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
    <% resource.errors.full_messages_for(:password).each do |message| %> 
      <h5 class="ui red inverted header space-mono-regular m-0"> 
        <small><%= message %></small> 
      </h5>
    <% end %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <div class="ui checkbox">
        <%= f.check_box :remember_me, class: "hidden" %>
        <%= f.label :remember_me %>
      </div>
    </div>
  <% end %>

  <div class="field">
    <%= f.submit "Log in", class: "ui primary button" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>

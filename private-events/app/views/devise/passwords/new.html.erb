<h2 class="ui header">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "ui form" }) do |f| %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "ui primary button" %>
  </div>

  <%= render "devise/shared/error_messages", resource: resource %>

<% end %>

<%= render "devise/shared/links" %>

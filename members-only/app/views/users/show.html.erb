<%= render @user %>

<div class="d-flex gap-2 my-3">
  <%= link_to "Edit this user", edit_user_registration_path, class: "btn btn-warning btn-sm" %>
  <%= link_to "Back to users", users_path, class: "btn btn-secondary btn-sm" %>
  <%= button_to "Destroy this user", user_registration_path, method: :delete, class: "btn btn-danger btn-sm" %>
</div>

<% if @posts.any? %>
  <div><%= render 'layouts/accordion', posts: @posts %></div>
<% else %>
  <p class="font-monospace mt-5 text-muted">This author hasn't written any posts yet.</p>
<% end %>
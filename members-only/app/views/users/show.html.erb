<p class="text-success"><%= notice %></p>

<%= render @user %>

<div class="d-flex gap-2 mt-3">
  <%= link_to "Edit this user", edit_user_path(@user), class: "btn btn-warning btn-sm" %>
  <%= link_to "Back to users", users_path, class: "btn btn-secondary btn-sm" %>
  <%= button_to "Destroy this user", @user, method: :delete, class: "btn btn-danger btn-sm" %>
</div>

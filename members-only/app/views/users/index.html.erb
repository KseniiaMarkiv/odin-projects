<p class="text-success"><%= notice %></p>

<h1>Users</h1>

<div id="users" class="row">
  <% @users.each do |user| %>
    <div class="col-md-4">
      <%= render user %>
      <p>
        <%= link_to "Show this user", user, class: "btn btn-primary btn-sm" %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New user", new_user_path, class: "btn btn-success btn-sm" %>

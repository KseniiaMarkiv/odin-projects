<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="mb-3 field">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
    <% resource.errors.full_messages_for(:email).each do |message| %>
      <div class="alert alert-danger"><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3 field">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
    <% resource.errors.full_messages_for(:password).each do |message| %>
      <div class="alert alert-danger"><%= message %></div>
    <% end %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-3 field form-check">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, class: "form-check-label" %>
    </div>
  <% end %>

  <div class="actions mb-3 d-flex align-items-center">
    <%= f.submit "Log in", class: "btn btn-info btn-sm" %>
    <span class="mx-2">|</span>
    <%= render "users/shared/links" %>
  </div>
<% end %>

